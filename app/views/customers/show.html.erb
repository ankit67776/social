<h1>Customer Details</h1>
<div class="mb-4">
  <p><strong>Name:</strong> <%= @customer.name %></p>
  <p><strong>Details:</strong> <%= @customer.details %></p>
</div>

<h2>Loans</h2>
<table class="table-auto border-collapse border border-gray-300 w-full">
  <thead>
    <tr>
      <th class="border border-gray-200 px-4 py-2">Loan ID</th>
      <th class="border border-gray-200 px-4 py-2">Loan Application Details</th>
      <th class="border border-gray-200 px-4 py-2">Loan Details</th>
    </tr>
  </thead>
  <tbody>
    <% @customer.loans.each do |loan| %>
      <tr>
        <td class="border border-gray-200 px-4 py-2"><%= loan.id %></td>
        <td class="border border-gray-200 px-4 py-2"><%= loan.loan_application.application_details %></td>
        <td class="border border-gray-200 px-4 py-2"><%= loan.details %></td>
      </tr>
    <% end %>
  </tbody>
</table>
