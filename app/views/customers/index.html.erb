<main class="container">
  <h1 class="text-2xl font-bold mb-6">Customers</h1>
  <table class="min-w-full border-collapse border border-gray-200">
    <thead>
      <tr>
        <th class="border border-gray-200 px-4 py-2">Customer Name</th>
        <th class="border border-gray-200 px-4 py-2">Details</th>
        <th class="border border-gray-200 px-4 py-2">Loan Status</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td class="border border-gray-200 px-4 py-2"><%= customer.name %></td>
          <td class="border border-gray-200 px-4 py-2"><%= customer.details %></td>
          <td class="border border-gray-200 px-4 py-2">
            <%= link_to "View Details", customer_path(customer), class: "text-indigo-600 hover:text-indigo-500" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</main>
