<div class="mt-20">
<table class="min-w-full border border-gray-200 shadow-sm rounded-lg">
  <thead class="bg-gray-100 text-gray-700 text-sm uppercase">
    <tr>
      <th class="px-4 py-2 border">Loan</th>
      <th class="px-4 py-2 border">Lender</th>
      <th class="px-4 py-2 border">Borrower Name</th>
      <th class="px-4 py-2 border">Total Commitment</th>
      <th class="px-4 py-2 border">Draw Availability</th>
      <th class="px-4 py-2 border">Principal Balance</th>
      <th class="px-4 py-2 border">Actions</th>
    </tr>
  </thead>
  <tbody class="text-gray-800">
    <% @loans.each do |loan| %>
      <tr class="border-b hover:bg-gray-50">
        <td class="px-4 py-2 border">
          <span class="px-2 py-1 text-xs font-semibold text-white rounded 
            <% if loan.data["loanType"] == "residential" %> bg-blue-500 <% else %> bg-orange-400 <% end %>">
            <%= loan.data["loanType"].capitalize %>
            <%= loan.account%>
          </span>
        </td>
        <td class="px-4 py-2 border"><%= loan.data["branch"]["bank"]["name"] %></td>
        <td class="px-4 py-2 border"><%= loan.data["borrower"]["formattedAddress"] %></td>
        <td class="px-4 py-2 border"><%= number_to_currency(loan.data["financials"]["amount"]) %></td>
        <td class="px-4 py-2 border"><%= number_to_currency(loan.data["financials"]["availableToDraw"]) %></td>
        <td class="px-4 py-2 border"><%= number_to_currency(loan.data["financials"]["principalBalance"]) %></td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>